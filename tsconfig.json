{
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES6"],
    "types": ["nova"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "module": "commonjs",
    "newLine": "LF",
    "outDir": "./change-case.novaextension"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules/**"]
}
